# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ligas"

# Auth
JWT_ACCESS_SECRET=change-me-access
JWT_REFRESH_SECRET=change-me-refresh
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=604800

# Seeded admin user
ADMIN_EMAIL=admin@ligas.local
ADMIN_PASSWORD=Admin123
# Set to false to keep an existing custom admin password during seeding
SEED_RESET_ADMIN_PASSWORD=true

# Captcha (hCaptcha/Turnstile)
CAPTCHA_PROVIDER=turnstile
CAPTCHA_SECRET=change-me

# Email (SMTP)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM="noreply@ligas.local"
# Uncomment to override advanced TLS options when using external providers
# SMTP_SECURE=false
# SMTP_REQUIRE_TLS=true
# SMTP_IGNORE_TLS=false
# SMTP_TLS_REJECT_UNAUTHORIZED=true

# Application
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:4200
AUTO_REFRESH_INTERVAL=10
# Leave STORAGE_BASE_URL empty to serve files from the backend `/storage` path during
# local development. Provide a value (for example, an S3 bucket URL) only when an
# external object storage service is configured.
STORAGE_BASE_URL=
STORAGE_BUCKET=
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=
